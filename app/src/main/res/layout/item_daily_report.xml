<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/cv_item_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp">
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FECHA: 01/Feb/2024"
            style="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="16dp"
            />

        <TextView
            android:id="@+id/ingresos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INGRESOS:"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:id="@+id/ingresos2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1.000.000"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:layout_constraintStart_toEndOf="@+id/ingresos"
            app:layout_constraintTop_toBottomOf="@+id/date"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:id="@+id/egresos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EGRESOS:"
            android:textStyle="bold"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:layout_constraintEnd_toStartOf="@id/egresos2"
            app:layout_constraintTop_toBottomOf="@+id/date"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:id="@+id/egresos2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1.000.000"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:id="@+id/cartera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CARTERA: "
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ingresos"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/cartera2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1.000.000"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:layout_constraintStart_toEndOf="@id/cartera"
            app:layout_constraintTop_toBottomOf="@+id/ingresos"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/flujo_cartera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="F. CARTERA"
            android:textStyle="bold"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:layout_constraintEnd_toStartOf="@id/flujo_cartera2"
            app:layout_constraintTop_toBottomOf="@+id/egresos"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/flujo_cartera2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" $1.000.000"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/egresos"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/ventas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VENTAS: $1.000.000"
            style="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/flujo_cartera"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ventas"
            android:layout_marginTop="16dp"
            android:background="#DEDEDE"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>